<section class="l-main l-push-double-top">
	<form action="/users/edit" method="POST">
		<div class="form-container" >
			<div class="form-group">
				<label>Email:</label>
				<input type = "text" name="email" placeholder="Email" value="<%= @user.email %>">
			</div>
			<div class="form-group">
				<label>Име:</label>
				<input type = "text" name="user_details_attributes[fname]"  placeholder="Име" value="<%=@user.user_details.fname %>">
			</div>
			<div class="form-group">
				<label>Фамилия:</label>
				<input type = "text" name="user_details_attributes[lname]" placeholder="Фамилия" value="<%=@user.user_details.lname %>">
			</div>
			<div class="form-group">
				<label>Телефон:</label>
				<input type = "text" name="user_details_attributes[phone]" placeholder="Телефон" value="<%=@user.user_details.phone %>">
			</div>
			<div class="form-group">
				<label>Адрес</label>
				<input type = "text" name="user_details_attributes[address]" placeholder="Адрес" value="<%=@user.user_details.address %>">
			</div>

			<input type="submit" class="button secondary" >
			<a href="/users/delete">Изтрий регистрацията</a>
		</div>
	</form>

	<section class="l-push-top panel">
		<%= erb(:'../purchase/_order_list') %>
	</section>
</section>