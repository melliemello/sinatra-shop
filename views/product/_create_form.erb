<div class="l-main l-push-double-top">
	<form action="/products/create" method="POST" enctype="multipart/form-data">
		<div class="form-container">
			<div class="form-group">
				<input type="text" name="title" placeholder="Име на продукта">
			</div>
			<div class="form-group">
				<input type="text" name="price" placeholder="Цена"> лв.
			</div>
			<div class="form-group">
				<textarea cols="50" name="summary" placeholder="Кратко описание"></textarea>
			</div>

			<div class="form-group">
				<input type="file" name="pictures_attributes[][file]">
			</div>
			<div class="form-group">
				<select multiple="true" name="categorys_attributes[][id]">
					<% for @category in @categories %>
						<option value="<%= @category.id %>"><%= @category.title %></option>
					<% end %>
				</select>
			</div>
			<div class="form-group">
				<input type="checkbox" name="featured">
			</div>
			<input type="submit" class="button secondary" value="Създай">
		</div>
	</form>
</div>